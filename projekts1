    <script>
        function prece(cena, krasa, svars, garums, platums) {
            this.cena = cena;
            this.krasa = krasa;
            this.svars = svars;
            this.garums = garums;
            this.platums = platums;
        }

        var prece1 = new prece(100, "sarkana", 70);
        var prece2 = new prece(50, "dzeltena", 70);
   


        document.getElementById("cena").innerHTML = prece1.cena;
        var b = document.getElementById("Krāsa");
        b.innerHTML = prece1.krasa;
        var c = document.getElementById("Svars");
        c.innerHTML = prece1.svars;
        var d = document.getElementById("garums");
        d.innerHTML = prece2.garums;
        var e = document.getElementById("platums");
        e.innerHTML = prece2.platums;
        
        
    </script>
